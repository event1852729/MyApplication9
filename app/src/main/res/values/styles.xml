<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
        <item name="android:textColor">#ffffff</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>

    <style name="Fab_style">#ffffff></style>

    <!--xml layout 可透過   app:tabTextAppearance 在設定style改屬性-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--toobar  textsize調整 在androidManifest.xml 所對應的theme裡-->
    <style name="AppTheme.NoActionBar">
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="actionMenuTextColor">@color/text</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--箭頭顏色-->
    <style name="toolBar3">
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

<style name="Theme.AppCompat.Light.Dialog.Alert.Self"
parent="@style/Theme.AppCompat.Light.Dialog.Alert">
<!--修改AlertDialog按钮的颜色-->
<item name="colorAccent">#3F51B5</item>
</style>




    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#000000</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">#cc0303</item>
        <item name="android:textSize">16sp</item>
        <!-- Used for the background -->
        <item name="android:background">#ffffff</item>
    </style>

    <style name="MyAlertDialogStyle3" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#000000</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">#020aa3</item>
        <item name="android:textSize">16sp</item>
        <!-- Used for the background -->
        <item name="android:background">#ffffff</item>
    </style>

    <style name="MyAlertDialogStyle1" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#000000</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <!-- Used for the background -->
        <item name="android:background">#ffffff</item>
    </style>

    <style name="sign_menu" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="toolBar4">
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="home_menu_title">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
</resources>
