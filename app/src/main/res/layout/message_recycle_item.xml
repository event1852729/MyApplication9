<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="150dp"
    android:background="#ffffff">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="A棟一樓"
            android:gravity="center"
            android:id="@+id/message_RecycleView_item_number"
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_below="@+id/message_RecycleView_item_number"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/message_RecycleView_item_content"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="16dp" />



        <Button
            android:visibility="invisible"
            android:background="@drawable/ic_announcement_recylce_item_image"
            android:id="@+id/message_button_holder"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/message_RecycleView_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_announcement_recylce_item_image"
            android:textSize="0sp"
            android:visibility="invisible" />

        <Button
            android:layout_marginLeft="25dp"
            android:layout_alignTop="@+id/Announce_date"
            android:layout_below="@+id/message_RecycleView_item_content"
            android:background="@drawable/message_read_button_style"
            android:textColor="#ffffff"
            android:text="未讀"
            android:textSize="15sp"
            android:id="@+id/message_recycle_buttonnumber"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:layout_toRightOf="@+id/message_recycle_buttonnumber"
            android:layout_below="@+id/message_RecycleView_item_content"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/message_RecycleView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" />

    </RelativeLayout>



</RelativeLayout>