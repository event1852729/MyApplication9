<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:theme="@style/toolBar3"
        android:id="@+id/add_announcement_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        app:title="@string/add_announcement"
        android:background="#415266">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/add_announcement_toolbar"
        android:id="@+id/announce_content_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:ems="10"
            android:id="@+id/add_announcement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText

            android:id="@+id/add_announcement_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/add_announcement_title"
            />

        <Button
            android:layout_below="@id/add_announcement_content"
            android:textColor="#ffffff"
            android:background="#000000"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:text="新增"
            android:id="@+id/add_announcement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

</RelativeLayout>