<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="250dp">


    <android.support.v7.widget.CardView
        android:layout_below="@+id/cpackage_item_contentToolbat"

        android:id="@+id/cpackage_rectcle_card_view"
        android:layout_width="240dp"
        android:layout_height="wrap_content"

        card_view:elevation="100dp"
        android:layout_margin="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/package_content_recycle_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/package_content_recycle_div"
                android:src="@drawable/ic_before" />

            <View
                android:id="@+id/package_content_recycle_div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/package_content_recycle_Text"
                android:background="#595959" />

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/package_content_recycle_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="hello"
                android:textColor="#000000"
                android:textSize="20sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>