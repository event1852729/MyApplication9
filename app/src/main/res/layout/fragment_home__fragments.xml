<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:id="@+id/fragment_home_id"
    tools:context="com.shot.community.go.Home_Fragments">






    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="invisible"
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            />

        <TextView
            android:visibility="invisible"
            android:id="@+id/picture_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="#e40c0c"
            android:text="中秋節邀請周杰倫 來社區唱歌 快來6一波"
            android:textSize="20dp"
            android:background="#FFFFFF" />

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            android:layout_below="@id/picture_activity"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/div1" />


        <TextView
            android:id="@+id/home_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#5555ff"
            android:text="快\n訊"
            android:textSize="38dp"
            android:background="#FFFFFF"
            android:layout_marginStart="15dp"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/div1"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/new_package"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/home_notice"
            android:layout_below="@id/div1"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_rounde2"
            android:textSize="23sp"
            android:gravity="center"
            android:text=" 新包裹 : 1  "
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/new_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_package"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/home_notice"
            android:background="@drawable/button_rounde"
            android:gravity="center"
            android:text=" 新信件 : 2  "
            android:textColor="#ffffff"
            android:textSize="23sp" />

        <Button
            android:id="@+id/new_announcement"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/home_notice"
            android:layout_below="@id/new_mail"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounde3"
            android:textSize="23sp"
            android:text=" 新公告 : 3  "
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--<View-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="#DDDDDD"-->
        <!--android:layout_marginBottom="2dp"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:id="@+id/div3" />-->



        <View
            android:id="@+id/div2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DDDDDD"
            android:layout_below="@+id/div1"
            android:layout_toRightOf="@id/new_announcement"
            android:layout_marginLeft="22dp"
            />

        <ImageButton
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/div1"
            android:layout_toRightOf="@id/div2"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@mipmap/center_phone3"


            />
        <android.support.v4.view.ViewPager
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/div1" />



    </RelativeLayout>

    </ScrollView>

    <!-- TODO: Update blank fragment layout -->





</RelativeLayout>
