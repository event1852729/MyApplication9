<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"

    android:layout_height="wrap_content">

    <TextView
        android:layout_toLeftOf="@+id/RIGHTFramFramME"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="1月20日 17:44"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/message_onclick_intent_dareME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_below="@+id/message_onclick_intent_dareME"
        android:layout_toLeftOf="@+id/RIGHTFramFramME"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/message_onclick_intent_cardviewME"

        card_view:cardCornerRadius="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <FrameLayout

                android:id="@+id/LIFTFramFramME"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">



                <TextView

                    android:layout_below="@+id/message_onclick_intent_dareME"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#1a1919"
                    android:padding="3dp"
                    android:text="fuckgggggggggggggggggggggghhhhhhhhhhhhhhhhhhhhgggggggggggg"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/message_onclick_intent_contentME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />


            </FrameLayout>



        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/RIGHTFramFramME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button

                android:background="@drawable/message_talk_button_her"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="我"
                android:id="@+id/message_onclick_intent_imageME"
                android:layout_width="40dp"
                android:layout_height="35dp" />


        </FrameLayout>


    </FrameLayout>


</RelativeLayout>