<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fcfcfc"
    android:layout_width="match_parent" android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/dicuss_content_first_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            app:layout_scrollFlags="scroll|enterAlways"
            android:theme="@style/toolBar3"
            android:id="@+id/dicuss_content_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/white"
            app:title="討論區內容"
            android:background="#415266">
        </android.support.v7.widget.Toolbar>
            <ScrollView
                android:layout_below="@+id/dicuss_content_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/dicuss_content_im"
                        android:src="@drawable/ic_announce_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"
                        android:layout_toRightOf="@+id/dicuss_content_im"
                        android:text="鄰居"

                        android:id="@+id/dicuss_content_numbetname"
                        android:src="@drawable/ic_announce_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />


                </RelativeLayout>

            </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="54dp"
            android:layout_marginEnd="56dp"
            android:background="@drawable/discuss_report_button"
            android:text="通過"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/agree" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/agree"
            android:layout_alignBottom="@+id/agree"
            android:layout_marginEnd="51dp"
            android:layout_toStartOf="@+id/agree"
            android:background="@drawable/discuss_report_button2"
            android:text="不通過"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/nonagree"
            />

        <TextView
            android:id="@+id/dicuss_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:padding="10dp"
            android:text="hello"
            android:textColor="#b63c04"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/scrollView2"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:text="文章內容 : "
            android:textColor="#000000"
            android:textSize="22dp"
            android:id="@+id/textView2" />
    </RelativeLayout>





</android.support.design.widget.CoordinatorLayout>
