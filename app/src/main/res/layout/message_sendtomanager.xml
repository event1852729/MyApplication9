<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:theme="@style/toolBar3"
        android:id="@+id/message_sendtomanager_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        app:title="寄給管理者"
        android:background="#415266"></android.support.v7.widget.Toolbar>



    <TextView
        android:textSize="20sp"
        android:textColor="#6e6e6e"
        android:layout_below="@+id/message_sendtomanager_toolbar"
        android:id="@+id/message_sendtomanager_number"
        android:text="收件者 : "
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20sp"
        android:textColor="#6e6e6e"
        android:layout_below="@+id/message_sendtomanager_toolbar"
        android:id="@+id/message_sendtomanager_number_text"
        android:layout_toRightOf="@+id/message_sendtomanager_number"
        android:text="收件者 : "
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#949494"
        android:layout_below="@id/message_sendtomanager_number_text"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/message_reply_div" />

    <EditText
        android:id="@+id/message_sendtomanager_content_content_edit"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:background="@null"
        android:focusable="true" android:focusableInTouchMode="true"
        android:hint="信件內容"
        android:layout_below="@+id/message_reply_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>