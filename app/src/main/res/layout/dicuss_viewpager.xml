<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.shot.community.go.Mailbox_Fragments">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/message_fragement_buttonTochange"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/message_button_record"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/home_notice"
            android:layout_below="@id/div1"
            android:layout_marginTop="10dp"
            android:background="@drawable/message_button_style"
            android:textSize="18sp"
            android:gravity="center"
            android:text="討 論 區"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/message_button_send"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_package"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/home_notice"
            android:background="@drawable/message_button"
            android:gravity="center"
            android:text="檢舉審核"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:id="@+id/detail_app_recycle_div"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/message_fragement_buttonTochange"
        android:background="#595959" />


    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dicuss_viewpager"
        android:layout_below="@+id/detail_app_recycle_div"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ececec"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:theme="@style/AppTheme">

    </android.support.v4.view.ViewPager>




</RelativeLayout>
