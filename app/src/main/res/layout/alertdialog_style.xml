<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alertdialog_announcement_meth"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:text="使用哪個功能?"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:textStyle="normal"
        android:layout_below="@id/alertdialog_announcement_meth"
        android:id="@+id/alertdialog_announcement_delete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/button_rounde3"
        android:gravity="center"
        android:text=" 刪除   "
        android:textColor="#000000"
        android:textSize="28sp" />

    <Button
        android:textStyle="bold"
        android:layout_below="@id/alertdialog_announcement_delete"
        android:id="@+id/alertdialog_announcement_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/button_rounde"
        android:gravity="center"
        android:text=" 修改   "
        android:textColor="#ffffff"
        android:textSize="28sp" />

    <Button
        android:layout_below="@+id/alertdialog_announcement_update"
        android:layout_alignParentRight="true"
        android:id="@+id/alertdialog_cancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/button_rounde"
        android:gravity="center"
        android:text=" 取消 "
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold" />

</RelativeLayout>