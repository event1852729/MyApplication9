<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#ffffff">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_announce_picture"
            android:id="@+id/dicuss_item_image"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <TextView
            android:text="住戶"
            android:gravity="center"
            android:id="@+id/dicuss_item_show_announcement_numbername"
            android:layout_toRightOf="@+id/dicuss_item_image"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="50dp"
            android:textColor="#a1a1a1"
            android:textSize="15dp"
            />

        <TextView
            android:layout_below="@+id/dicuss_item_image"
            android:id="@+id/dicuss_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="23sp"
            />

        <TextView
            android:layout_below="@+id/dicuss_item_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/dicuss_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#a1a1a1"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/dicuss_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dicuss_item_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:textColor="#a1a1a1" />

        <Button
            android:visibility="invisible"
            android:background="@drawable/ic_announcement_recylce_item_image"
            android:id="@+id/dicuss_item_button_holder"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/dicuss_item_date" />
        <Button
            android:background="@drawable/ic_delete2"
            android:id="@+id/diciss_item_manager_button"
            android:textSize="0sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </RelativeLayout>



</RelativeLayout>